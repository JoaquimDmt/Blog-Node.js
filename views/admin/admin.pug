extends ../layout.pug
 
block variables
    - let title = 'Administration';
 
block content
    h1 Espace Administration
        a.admin-menu.backhome(href="/") Retour à l'Accueil
    h2 Ajouter un Article
    a(href="/admin/write") Cliquez sur ce lien
    h2 Gestion des Articles existants
    table
        tr
            th #
            th
                i.icon-calendar
                |  Date de <br>publication
            th Titre
            th
                i.icon-user
                | Auteur
            th
                i.icon-tag
                | Catégorie
            th
                i.icon-cog
                |Actions
        each article in articles
            tr
                td= article._id
                td 
                    = article.dateCreated.toLocaleDateString()+','
                    br
                    = article.dateCreated.toLocaleTimeString('en-US', {hour: '2-digit', minute:'2-digit'})
                td
                    a(href="../article/"+article._id)= article.title
                td= article.author.name
                td= article.category.title
                td
                    i.icon-pencil
                    a(href='./edit/'+article._id) Modifier
                    br
                    i.icon-trash
                    a(href='./delete/'+article._id) Supprimer